        required: false
        default: present
    required_version:
        description:
            - version of the package that is required
        required: false
    url:
        description:
            - url of pkg or dmg containing pkg
        required: false
    dest:
        description:
            - destination of downloaded file, required for url
        required: false
    cookie:
        description:
            - cookie to send to download
        required: false
